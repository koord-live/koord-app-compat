{
  "app-id": "live.koord.Koord-RealTime",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15",
  "sdk": "org.kde.Sdk",
  "command": "Koord-RealTime",
  "rename-desktop-file": "koordrealtime.desktop",
  "rename-icon": "koord-realtime",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--share=network",
    "--filesystem=xdg-run/pipewire-0",
    "--socket=system-bus",
    "--socket=pulseaudio",
    "--device=all"
  ],
  "modules": [
    {
      "name": "jack2",
      "buildsystem": "simple",
      "build-commands": [
      	"./waf configure --prefix=/app --htmldir=/app/share/doc/jack/ --classic",
      	"./waf build -j $FLATPAK_BUILDER_N_JOBS",
      	"./waf install"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/jackaudio/jack2/archive/v1.9.16.tar.gz",
          "sha256": "e176d04de94dcaa3f9d32ca1825091e1b938783a78c84e7466abd06af7637d37"
        }
      ],
      "cleanup": [
      	"*"
      ]
    },
    {
      "name": "koord-realtime",
      "buildsystem": "qmake",
      "sources": [
        {
          "type": "git",
          "url": "../",
          "branch": "master"
        }
      ]
    }
  ]
}
